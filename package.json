{
    "name": "ts-server",
    "version": "1.0.0",
    "description": "TypeScript Web Framework",
    "private": true,
    "main": "src/index.js",
    "scripts": {
        "start": "parcel src/index.html --port 3000 --open --out-dir .cache --no-source-maps --no-cache",
        "build": "rm -rf build && parcel build src/index.html --out-dir build --no-cache --no-source-maps --public-url '.'",
        "clean": "rm -rf .cache build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samnoh/ts-server.git"
    },
    "keywords": [
        "TypeScript",
        "Web Framework"
    ],
    "author": "samnoh",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/samnoh/ts-server/issues"
    },
    "homepage": "https://github.com/samnoh/ts-server#readme",
    "devDependencies": {
        "parcel-bundler": "^1.12.3",
        "typescript": "^3.5.3"
    }
}
